extends ../layout

block content
    .container(style='margin-top:50px', ng-app='createSchool')
        .panel.panel-default.col-md-4.col-md-offset-4
            .panel-body
                h1.text-xs-center Sign Up
                br
                form(action='/signup', method='POST')
                    .form-group
                        input.form-control(type='text', name='name', placeholder='name')
                    .form-group
                        input.form-control(type='email', name='email', placeholder='email')
                    .form-group
                        input.form-control(type='password', name='password', placeholder='password')
                    .form-group
                        input.form-control(type='text', name='beta key', placeholder='beta key')
                    
                    
                    button.btn.btn-block.btn-primary(type='submit') Submit
