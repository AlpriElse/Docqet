extends ../layout
 
block content
    .container(style='margin-top:50px')
        .panel.panel-default.col-md-4.col-md-offset-4
            .panel-body
                h3.card-title.text-center Sign in
                img.img-circle.center-block(src='https://labs.xda-developers.com/static/img/default-avatar.png')
                br
                form(action='/login',method='POST')
                    fieldset.form-group
                        input.form-control(type='text', name='email', placeholder='email', required)
                        br
                        input.form-control(type='password', name='password', placeholder='password', required)
                        br
                        button.btn.btn-block.btn-primary(type='submit') Submit
                p.text-center
                    a(href='/signup') Create an account
                #message
                if message
                  h1.text-center.error-message #{message}

        
