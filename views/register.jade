extends layout

block content
    .container
        .row
            .col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Register Your School
                    .account-wall
                        form(action='/register', method='post').form-horizontal
                            .form-group
                                input.form-control(type='text', name='schoolName', placeholder='institution name')
                                input.form-control(type='email', name='email', placeholder='admin email')
                                input.form-control(type='password', name='password', placeholder='admin password')
                            .form-group
                                input.form-control(type='text', name='')
                            button.btn.btn-lg.ptn-primary.btn-block(type='submit') Submit
