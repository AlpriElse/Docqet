extends layout

block content
    .container
        .row
            .col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Sign Up
                    .account-wall
                        form(action='/signup', method='post').form-horizontal
                            .form-group
                                input.form-control(type='text', name='username', placeholder='name')
                            .form-group
                                input.form-control(type='email', name='email', placeholder='email')
                            .form-group
                                input.form-control(type='password', name='password', placeholder='password')
                            .form-group
                                input.form-control(type='text', name='gender', placeholder='male/female/other')
                            .form-group
                                input.form-control(type='text', name='address', placeholder='address')
                            
                            
                            button.btn.btn-lg.ptn-primary.btn-block(type='submit') Submit
